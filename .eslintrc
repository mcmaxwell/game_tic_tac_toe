{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true,
    "jasmine": true,
    "jquery": true
  },

  "parser": "babel-eslint",

  "plugins": [
    "react",
    "babel"
  ],

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "globals": {
    "Foundation": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },

  "rules": {
    "accessor-pairs": [2, {"getWithoutSet": true}],
    "array-callback-return": 2,
    "arrow-body-style": 2,
    "arrow-spacing": 2,
    "block-scoped-var": 2,
    "block-spacing": 2,
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "callback-return": 2,
    "camelcase": 1,
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "complexity": 0,
    "computed-property-spacing": [2, "never"],
    "consistent-this": 0,
    "curly": [2, "all"],
    "default-case": 0,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eol-last": 2,
    "eqeqeq": 2,
    "func-names": 0,
    "func-style": 0,
    "global-require": 0,
    "guard-for-in": 2,
    "jsx-quotes": [2, "prefer-double"],
    "handle-callback-err": [2, "error"],
    "id-length": 0,
    "id-match": [2, "^(?:_?[a-zA-Z0-9]*)|[_A-Z0-9]+$"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "init-declarations": 0,
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "keyword-spacing": 2,
    "linebreak-style": [2, "unix"],
    "lines-around-comment": 0,
    "max-depth": 0,
    "max-len": [0, 100, 4],
    "max-nested-callbacks": 0,
    "max-params": [2, {"max": 3}],
    "max-statements": 0,
    "new-parens": 2,
    "newline-after-var": 2,
    "no-alert": 1,
    "no-array-constructor": 2,
    "no-bitwise": 0,
    "no-caller": 2,
    "no-catch-shadow": 0,
    "no-confusing-arrow": 0,
    "no-console": 1,
    "no-continue": 2,
    "no-debugger": 1,
    "no-div-regex": 2,
    "no-duplicate-imports": 2,
    "no-else-return": 0,
    "no-eq-null": 2,
    "no-empty-function": 1,
    "no-empty-pattern": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-label": 2,
    "no-extra-parens": 0,
    "no-floating-decimal": 2,
    "no-implicit-coercion": 0,
    "no-implicit-globals": 2,
    "no-implied-eval": 2,
    "no-inline-comments": 2,
    "no-invalid-this": 2,
    "no-iterator": 2,
    "no-label-var": 2,
    "no-labels": 0,
    "no-lone-blocks": 2,
    "no-lonely-if": 2,
    "no-loop-func": 2,
    "no-mixed-requires": [2, { "grouping": false, "allowCall": false }],
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": [2, {"max": 1}],
    "no-nested-ternary": 0,
    "no-negated-condition": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-object": 2,
    "no-new-require": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-param-reassign": 2,
    "no-path-concat": 2,
    "no-plusplus": 0,
    "no-process-env": 0,
    "no-process-exit": 2,
    "no-proto": 2,
    "no-prototype-builtins": 2,
    "no-restricted-modules": 0,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-sync": 1,
    "no-ternary": 0,
    "no-throw-literal": 2,
    "no-trailing-spaces": 2,
    "no-undef-init": 2,
    "no-undefined": 1,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": [2, {"allowShortCircuit": true}],
    "no-unused-vars": [1, {"vars": "all", "args": "none"}],
    "no-use-before-define": 2,
    "no-useless-call": 2,
    "no-useless-computed-key": 2,
    "no-useless-concat": 2,
    "no-useless-constructor": 2,
    "no-useless-escape": 2,
    "no-useless-rename": 2,
    "no-var": 2,
    "no-void": 2,
    "no-warning-comments": 0,
    "no-with": 2,
    "no-whitespace-before-property": 2,
    "object-property-newline": 0,
    "one-var": [2, "never"],
    "one-var-declaration-per-line": [2, "always"],
    "operator-assignment": [2, "always"],
    "operator-linebreak": [2, "after"],
    "padded-blocks": 0,
    "prefer-arrow-callback": 0,
    "prefer-const": 2,
    "prefer-reflect": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single"],
    "radix": [2, "always"],
    "require-jsdoc": 0,
    "semi": [2, "always"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "sort-imports": 0,
    "sort-vars": 0,
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-in-parens": 0,
    "space-infix-ops": [2, {"int32Hint": false}],
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "spaced-comment": [2, "always"],
    "strict": 0,
    "template-curly-spacing": [2, "always"],
    "unicode-bom": [2, "never"],
    "valid-jsdoc": 0,
    "vars-on-top": 2,
    "wrap-iife": [2, "outside"],
    "wrap-regex": 0,
    "yield-star-spacing": [2, "after"],
    "yoda": 0,

    "react/display-name": 0,
    "react/jsx-no-duplicate-props": [2, { "ignoreCase": true }],
    "react/no-deprecated": [1, { "react": "15.0.0" }],
    "react/no-multi-comp": [2, { "ignoreStateless": false }],
    "react/no-string-refs": 2,
    "react/prefer-es6-class": [2, "always"],
    "react/prefer-stateless-function": 2,
    "react/prop-types": 2,
    "react/require-render-return": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": 2,
    "react/wrap-multilines": 2,
    "react/jsx-boolean-value": 2,
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-equals-spacing": 2,
    "react/jsx-first-prop-new-line": [2, "multiline"],
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-key": 2,
    "react/jsx-no-bind": [2, { "ignoreRefs": true, "allowArrowFunctions": false, "allowBind": false }],
    "react/jsx-no-target-blank": 2,
    "react/jsx-pascal-case": 2,

    "array-bracket-spacing": 0,
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "new-cap": 0,
    "object-curly-spacing": 0,
    "object-shorthand": 0,

    "babel/array-bracket-spacing": [2, "always"],
    "babel/arrow-parens": [2, "always"],
    "babel/generator-star-spacing": [2, "after"],
    "babel/new-cap": 0,
    "babel/object-curly-spacing": [2, "always"],
    "babel/object-shorthand": [2, "always"],
    "babel/no-await-in-loop": 2,
    "babel/flow-object-type": 2
  }
}
